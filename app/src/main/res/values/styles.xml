<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="LinearLayoutDetailInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="CardViewDetailInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewCommon">
        <item name="android:layout_width">@dimen/imgview_24dp</item>
        <item name="android:layout_height">@dimen/imgview_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/marigin_16dp</item>
    </style>

    <style name="TextViewCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marigin_16dp</item>
        <item name="android:textSize">@dimen/tv_16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_4dp</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_22sp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/marigin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewSpotHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textsize_45sp</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:layout_marginTop">@dimen/margin_48dp</item>
        <item name="android:paddingBottom">@dimen/margin_8dp</item>
        <item name="android:paddingStart">@dimen/imgview_24dp</item>
        <item name="android:paddingEnd">@dimen/imgview_24dp</item>
        <item name="android:paddingTop">@dimen/margin_8dp</item>
    </style>

    <style name="TextViewSpotInfoAboutPlace">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/c3</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_8dp</item>
        <item name="android:paddingEnd">@dimen/margin_8dp</item>
        <item name="android:paddingBottom">@dimen/margin_8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textSize">@dimen/textview_size_20sp</item>

    </style>

    <style name="FoodItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_item_height_200dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="FoodItemView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/view_food_item_80dp</item>
        <item name="android:foreground">@drawable/gradient</item>

    </style>


</resources>
